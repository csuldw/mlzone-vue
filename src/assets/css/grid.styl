/* u-widget-tops ======================================================================================================== */

.u-widget-tops {
  height: 200px;
  border: 1px solid #eaeaea;
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
    li {
      list-style: none;
    }
  }
}
.u-widget-nav {
  background-color: #fbfbfb;
  line-height: 36px;
  height: 36px;
  border-bottom: 1px solid #eaeaea;
}
.u-widget-nav li {
  float: left;
  width: 27%;
  text-align: center;
  color: #999;
  border-right: 1px solid #eaeaea;
  cursor: pointer;
  font-size:15px;
}
.u-widget-nav li.active {
  background-color: #fff;
  color: #666;
  font-weight: bold;
  cursor: default;
}

.u-widget-navcontent {
  clear: both;
  position: relative;
}
.u-widget-navcontent .item {
  padding: 15px;
  width: 100%;
  position: absolute;
  left: 100%;
  opacity: 0;
}
.u-widget-navcontent .item.active {
  left: 0;
  opacity: 1;
}
.u-widget-navcontent .item-01 li {
  margin-bottom: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
}
.u-widget-navcontent .item-01 time {
  float: right;
  color: #bbb;
  margin-left: 10px;
}
.u-widget-navcontent .item-01 li:first-child a {
  font-weight: bold;
}

